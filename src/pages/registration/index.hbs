<div class="registration">
  <div class="registration__container">
    <h1 class="registration__title">
      Регистрация
    </h1>

    <form 
      class="registration__form form"
      action="/." 
      method="get" 
      onsubmit="event.preventDefault()"
    >
      {{> input 
        class="registration__input" 
        name='email' 
        type="email" 
        required="true" 
        placeholder="Почта"
      }}

      {{> input 
        class="registration__input" 
        name='login' 
        type="text" 
        required="true" 
        placeholder="Логин"
      }}

      {{> input 
        class="registration__input" 
        name='first_name' 
        type="text" 
        required="true" 
        placeholder="Имя"
      }}

      {{> input 
        class="registration__input" 
        name='second_name' 
        type="text" 
        required="true" 
        placeholder="Фамилия"
      }}

      {{> input 
        class="registration__input" 
        type="phone" 
        name='phone' 
        required="true" 
        placeholder="Телефон"
      }}

      {{> input 
        class="registration__input" 
        id="password1"
        type="password1" 
        name='password1' 
        required="true" 
        placeholder="Пароль"
      }}

      {{> input 
        class="registration__input" 
        id="password2"
        type="password2" 
        name='password2' 
        required="true" 
        placeholder="Пароль (еще раз)"
      }}

      <div class="registration__controls">
        {{> button 
          class="registration__button" 
          label="Зарегистрироваться" 
          type="submit" 
        }}
        
        {{> button 
          class="registration__button"
          secondary="true"
          label="Войти"
          handleClick="goToPage('login')" 
        }}
      </div>
    </form>
  </div>
</div>
